{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
