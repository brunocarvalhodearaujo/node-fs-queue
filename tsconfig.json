{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": false,
    "preserveConstEnums": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
